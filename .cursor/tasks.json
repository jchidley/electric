{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Project",
      "type": "shell",
      "command": "cargo build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "cargo test",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Generate Documentation",
      "type": "shell",
      "command": "cargo doc --no-deps",
      "group": "build"
    }
  ]
} 